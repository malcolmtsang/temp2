
@model IEnumerable<BillPay>

@{
    ViewData["Title"] = "Block Bill Pay";
}

<h1 class="display-4">Block Bill Pay</h1>
<div class="row">
    <table class="table">
        <tr>
            <th>ID</th>
            <th>Account Number</th>
            <th>Payee Name</th>
            <th>Amount</th>
            <th>Scheduled Date</th>
            <th>Period</th>
            <th></th>
        </tr>
        @foreach (var billPay in Model)
        {
    <tr>
        <td> @Html.DisplayFor(x => billPay.BillPayID)</td>
        <td> @Html.DisplayFor(x => billPay.AccountNumber)</td>
        <td> @Html.DisplayFor(x => billPay.Payee.Name)</td>
        <td> @Html.DisplayFor(x => billPay.Amount)</td>
        <td> @Html.DisplayFor(x => billPay.ScheduleTimeUtc)</td>
        <td> @Html.DisplayFor(x => billPay.Period)</td>
        <td>
            @if (billPay.Blocked==false)
            {
                <a class="btn btn-primary" asp-action="BlockOrUnblock" asp-route-id="@billPay.BillPayID">Block</a> }
            else
            {
                <a class="btn btn-primary" asp-action="BlockOrUnblock" asp-route-id="@billPay.BillPayID">Unblock</a>}
            }
        </td>
    </tr>
        }
    </table>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}